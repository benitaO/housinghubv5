<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_picture"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_launcher_round"
                app:civ_border_color="@color/black"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Photo"
                android:id="@+id/changeProfilePhoto"
                android:layout_below="@id/profile_picture"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                />

            <!-- Display name section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/changeProfilePhoto"
                android:layout_marginTop="80dp"
                android:background="@drawable/white_grey_border_bottom"
                android:id="@+id/rel1">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_add_alert_grey_24dp"
                    android:layout_centerVertical="true"/>
                
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/username"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:background="@null"
                    android:inputType="textNoSuggestions"
                    android:hint="User Name"
                    />
            </RelativeLayout>

            <!-- First name section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rel1"
                android:background="@drawable/white_grey_border_bottom"
                android:id="@+id/rel2">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_add_alert_grey_24dp"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/firstname"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:background="@null"
                    android:inputType="textNoSuggestions"
                    android:hint="First Name"
                    />
            </RelativeLayout>

            <!-- Last name section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rel2"
                android:background="@drawable/white_grey_border_bottom"
                android:id="@+id/rel3">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lastname"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:background="@null"
                    android:inputType="textNoSuggestions"
                    android:hint="Last Name"
                    />
            </RelativeLayout>



            <!-- Bio section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rel3"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_grey_border_bottom"
                android:id="@+id/rel4">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_chat_bubble_black_24dp"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bio"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:background="@null"
                    android:inputType="textNoSuggestions"
                    android:hint=" Bio"
                    />
            </RelativeLayout>

            <!-- Number of housemates section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rel4"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_grey_border_bottom"
                android:id="@+id/rel5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of HouseMates"
                    android:layout_centerVertical="true"/>

                <NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/number_picker"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="190dp"
                    >

                </NumberPicker>

            </RelativeLayout>


            <!-- Bio section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rel5"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_grey_border_bottom"
                android:id="@+id/rel6">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_chat_bubble_black_24dp"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/budget_per_month"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:background="@null"
                    android:inputType="textNoSuggestions"
                    android:hint="Budget "
                    />
            </RelativeLayout>

            <!-- Private information -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel6"
                android:id="@+id/rel7">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRIVATE INFORMATION"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>


            <!-- Email section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rel7"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_grey_border_bottom"
                android:id="@+id/rel8">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_phone_black_24dp"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone_edit_text"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:background="@null"
                    android:inputType="textNoSuggestions"
                    android:hint=" Phone number"
                    />
            </RelativeLayout>

            <!-- Phone number section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rel8"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_grey_border_bottom"
                android:id="@+id/rel9">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_email_black_24dp"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email_edit_Text"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:background="@null"
                    android:inputType="textNoSuggestions"
                    android:hint="Email"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</merge>