<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">



        <TextView
            android:id="@+id/phonenumber_landlord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone number"
            tools:layout_editor_absoluteX="139dp"
            tools:layout_editor_absoluteY="15dp" />

        <TextView
            android:id="@+id/email_landlord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            tools:layout_editor_absoluteX="139dp"
            tools:layout_editor_absoluteY="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Edit your profile"
            android:background="@drawable/rounded_yellow_border"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/editProfileButton"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/phonenumber_lanlordoutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0876593947"
            tools:layout_editor_absoluteX="139dp"
            tools:layout_editor_absoluteY="15dp" />

        <TextView
            android:id="@+id/email_landlordoutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="landlord@lanlord.com"
            tools:layout_editor_absoluteX="139dp"
            tools:layout_editor_absoluteY="15dp" />


    </LinearLayout>



</LinearLayout>